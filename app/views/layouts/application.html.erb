          </div>
              <% end %>
          
              <% if current_user %>
              <li class="nav-item">
                  <%= link_to 'Profile', user_session_path, class:"nav-link" %> 
              </li>
                    <%= link_to "Log out", destroy_user_session_path,
                    :class => "nav-link", method: :delete %>
